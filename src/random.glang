fetch std_os;
fetch "lcg.glang";

obj __lcg_seed = length(os_path()); # simulate randomness with length of the user's PATH variable

func random_number() {
    __lcg_seed = (__LCG_A * __lcg_seed + __LCG_C) % __LCG_M;
    give (__lcg_seed / __LCG_M) * 1000;
}

func random_range(a, b) {
    give a + random_number() * (b - a);
}
